object TestWhileStmt {
  fun true_as_cond {
    while true {
      puts("hi")
    }
  }

  fun false_as_cond {
    while false {
      puts("hi")
    }
  }

  fun binary_expr_as_cond {
    while 10 > 0 {
      puts("hi")
    }
  }

  fun valid_expr_as_cond {
    var x = 100
    var y = 100
    while x == y {
      puts("hi")
    }
  }

  fun non_bool_expr_as_cond {
    var x = 100
    var y = 100
    while x + y {
      puts("hi")
    }
  }

  fun stop_outside_loop {
    stop
  }

  fun next_outside_loop {
    next
  }

  fun stop_in_loop {
    while true {
      stop
    }
  }

  fun next_in_loop {
    while true {
      next
    }
  }

  fun loop_in_loop_with_next {
    while true {
      while true {
        next
      }
    }
  }

  fun loop_in_loop_with_stop_outside {
    while true {
      while true {
        next
      }
    }
    stop
  }
}
